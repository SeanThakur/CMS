<div class="container">
    <div class="row">
        <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{post.title}}</h5>
                        <hr>
                        <blockquote class="blockquote">
                            <p class="card-text">{{post.body}}.</p>
                            <small  class="text-center text-muted">Categories : {{post.Categories.name}}</small>
                            <footer class="blockquote-footer d-inline float-right">Created By :- <cite title="Source Title">{{user.firstName}}</cite></footer> 
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <small class="text-muted">Posted on : {{generateDate date 'MMMM Do YYYY'}}</small>
                        </blockquote>
                    </div>
                </div>
                <br><br><br>
                <div class="row">
                    <div class="col">
                        {{#if user}}
                            <div class="card">
                                <div class="card-body">
                                    <div class="display-4 text-center">
                                        Comment
                                    </div>  
                                    <hr width="10%">
                                    <form action="/Videojet.admin/comment/" method="POST">
                                        <div class="form-group">
                                            <label for="body">Message: </label>
                                            <textarea rows="5" cols="5" name="body" class="form-control" placeholder="Comment This Post" required ></textarea>
                                            <input type="hidden" name="id" value="{{post.id}}">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Send</button>
                                    </form>      
                                </div>
                            </div>
                             {{else}}
                                <div class="jumbotron text-center">
                                    <p class="lead">For Comment to this post you have to Login.</p>
                                    <a href="/register" class="btn btn-info btn-md">Click to Register</a>
                                </div>
                        {{/if}}
                        
                        
                    </div>
                </div>
                {{!-- Comment box --}}
                <br>
                {{#if user}} 
                    <h2>Comments to View</h2>
                    {{else}}
                        <p class="display-3">Comments</p>
                {{/if}}               
                {{#each post.comment}}
                <br>
                <div class="card">
                    <div class="card-body">
                        <div class="media mb-4">
                            <div class="media-body">
                            <h5 class="mt-0">{{user.firstName}}</h5>
                            <hr>
                            {{body}}
                            </div>
                        </div>
                    </div>
                </div>
